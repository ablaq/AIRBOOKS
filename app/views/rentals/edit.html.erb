<div class="container w-50">
  <h1><%= @book.title %></h1>
  <p><%= @book.author %></p>
  <%= simple_form_for [ @book, @rental ] do |f| %>
  <%= f.input :start_date, as: :string, input_html: {class: "datepicker"} %>
  <%= f.input :end_date, as: :string, input_html: {class: "datepicker"} %>

  <%= f.submit class:"btn btn-ghost" %>
  <% end %>



  <%= link_to "Back to my rentals", my_rentals_path, class:"btn btn-ghost mt-3" %>
</div>
