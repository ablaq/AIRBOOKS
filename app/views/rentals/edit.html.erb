<div class="container w-50">
  <h1><%= @book.title %></h1>
  <p><%= @book.author %></p>
  <%= simple_form_for [ @book, @rental ] do |f| %>
  <%= f.input :start_date, as: :string, input_html: {class: "datepicker"} %>
  <%= f.input :end_date, as: :string, input_html: {class: "datepicker"} %>
</div>
<div class="container w-50 text-center">
  <%= f.submit class:"btn btn-primary" %>
  <% end %>
</div>

<div class="container w-50 text-center">
  <%= link_to "Back to my rentals", my_rentals_path, class:"btn btn-primary mt-3" %>
</div>