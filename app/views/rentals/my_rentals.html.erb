<h1>My rented books</h1>

<% @rentals.each do |rental| %>
  <% if rental.user == current_user %>
    <h2 class="mt-3"><%= rental.book[:title] %></h2>
    <p><%= rental.book[:author]%> </p>
    <p><%= rental.start_date %></p>
    <p><%= rental.end_date %></p>
    <p>Status:<%= rental.status %></p>
    <% if rental.status == "Accepted" %>
      <% user_mail = rental.book.user.email %>
      <div id="contact-owner" class="btn btn-ghost"><a href="mailto:<%= user_mail %>?subject=Hi! I'd like to pick up the book!">Contact owner</a></div>
    <% end %>
    <%= link_to "Edit rental", edit_book_rental_path(rental.book, rental), class:"btn btn-ghost" %> <%= link_to "Delete this rental", 
    book_rental_path(rental.book, rental),
    method: :delete,
    class:"btn btn-ghost"%>
  <% end  %>
<% end  %>
