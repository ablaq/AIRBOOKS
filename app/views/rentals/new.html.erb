<div class="container w-50">
  <h1><%= @book.title %></h1>
  <p><%= @book.author %></p>
  <%= simple_form_for [ @book, @rental ] do |f| %>
  <%= f.input :start_date, as: :string, input_html: {class: "datepicker"} %>
  <%= f.input :end_date, as: :string, input_html: {class: "datepicker"} %>
</div>
<div class="container w-50 text-center">
  <%= f.submit class:"btn btn-ghost"%>
  <% end %>
</div>

<div class="container w-50 text-center">
  <%= link_to "Back to book", book_path(@book.id), class:"btn btn-ghost mt-3" %>
</div>