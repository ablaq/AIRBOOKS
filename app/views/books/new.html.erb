<div class="container">
  <h1>Add a new book</h1>
  <%= simple_form_for @book do |f| %>
  <%= f.input :title %>
  <%= f.input :author %>
  <%= f.input :language %>
  <%= f.input :subject %>
  <%= f.input :summary, as: :text %>
  <%= f.input :year %>
  <%= f.input :pages %>
  <%= f.input :photo, as: :file, class: "btn btn-primary" %>
  <%= f.submit class: "btn btn-primary" %>
  <% end %>
</div>
